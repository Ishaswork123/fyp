    width: 48%;
    float: left;
    margin-right: 2%;
    box-sizing: border-box;
    margin-bottom: 20px;
}


/* Reset the right margin for 2-per-row */
.grid.all-active .two-per-row:nth-child(2n) {
    margin-right: 0;  /* Reset to 0 when all classes are active */
}

/* Correct width */
