<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning Resources</title>
    <link rel="stylesheet" href="/public/style.css">
    <style>
       body {
  font-family: 'lato', sans-serif;
}
.container {
  max-width: 1000px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 10px;
  padding-right: 10px;
}

h2 {
  font-size: 26px;
  margin: 20px 0;
  text-align: center;
  small {
    font-size: 0.5em;
  }
}

.responsive-table {
  li {
    border-radius: 3px;
    padding: 25px 30px;
    display: flex;
    justify-content: space-between;
    margin-bottom: 25px;
  }
  .table-header {
    background-color: #95A5A6;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
  .table-row {
    background-color: #ffffff;
    box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.1);
  }
  .col-1 {
    flex-basis: 15%;
  }
  .col-2 {
    flex-basis: 15%;
  }
  .col-3 {
    flex-basis: 15%;
  }
  .col-4 {
    flex-basis: 15%;
  }
  .col-5 {
    flex-basis: 20%;
  }
  .col-6 {
    flex-basis: 20%;
  }
  
  @media all and (max-width: 767px) {
    .table-header {
      display: none;
    }
    .table-row{
      
    }
    li {
      display: block;
    }
    .col {
      
      flex-basis: 100%;
      
    }
    .col {
      display: flex;
      padding: 10px 0;
      &:before {
        color: #6C7A89;
        padding-right: 10px;
        content: attr(data-label);
        flex-basis: 50%;
        text-align: right;
      }
    }
  }
}
.header {
    float: right;
    text-decoration: none;
    font-size: 20px;
    font-weight: bold;
    color: #333; /* Dark gray text */
    padding: 10px 15px; /* Adds spacing */
    background-color: #f8f8f8; /* Light background */
    border-radius: 5px; /* Rounded corners */
    transition: all 0.3s ease-in-out;
}

.header:hover {
    color: white;
    background-color: #007BFF; /* Blue background on hover */
    text-decoration: none;
}
    </style>
</head>
<body>

    <div class="container">
        <a href="/std/class" class="header">Home</a>
        <% if (materials.length > 0) { %>
        <h2>Learning Material  </h2>
        <ul class="responsive-table">
          <li class="table-header">
            <div class="col col-1">Title</div>
            <div class="col col-2">fileType</div>
            <div class="col col-3">Assigned To</div>
            <div class="col col-4">Class Name</div>
            <div class="col col-5">View</div>
            <div class="col col-6">Download</div>


          </li>
          <% materials.forEach((material) => { %>
            <li class="table-row">
                <div class="col col-1" data-label="Title"><%= material.title %></div>
                <div class="col col-2" data-label="File Type"><%= material.fileType %></div>
                <div class="col col-3" data-label="Assigned To">
                    <%= material.assignedTo === "all" ? "All Students" : "Class: " + material.className %>
                </div>
                <div class="col col-4" data-label="Class Name"><%= material.className || "N/A" %></div>
                <div class="col col-5" data-label="View">
                    <a href="/std/view/<%= material._id %>" target="_blank">View</a> </div>
                    <div class="col col-6" data-label="Download">

                    <a href="/std/download/<%= material._id %>">Download</a>              
                  </div>

            </li>
        <% }) %>
         
          
        </ul>
        <% } else { %>
            <p>No resources available.</p>
        <% } %>
      </div>

    <!-- <a href="/std/class">Back to Dashboard</a> -->
</body>
</html>
