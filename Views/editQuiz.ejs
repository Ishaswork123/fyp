      <h1 style="font-weight: bold; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Edit Quiz</h1>
    <form action="/tchr/quizedit/<%= quiz._id %>" method="POST" class="form">
      <label>Experiment Number:</label>
      <input type="text" name="exp_no" value="<%= quiz.exp_no %>" readonly required><br>
  
      <label>Experiment Title:</label>
      <input type="text" name="exp_title" value="<%= quiz.exp_title %>" readonly required><br>
  
        <label>Question Number:</label>
        <input type="text" name="question_no" value="<%= quiz.question_no %>" required><br>

        <label>Question:</label>
        <input type="text" name="Question" value="<%= quiz.Question %>" required><br>

        <label>Option 1:</label>
        <input type="text" name="option1" value="<%= quiz.option1 %>" required><br>

        <label>Option 2:</label>
        <input type="text" name="option2" value="<%= quiz.option2 %>" required><br>

        <label>Option 3:</label>
        <input type="text" name="option3" value="<%= quiz.option3 %>" required><br>

        <label>Option 4:</label>
        <input type="text" name="option4" value="<%= quiz.option4 %>" required><br>

        <label>Answer:</label>
        <input type="text" name="Answer" value="<%= quiz.Answer %>" required><br>

        <button type="submit">Update Quiz</button>
    </form>
