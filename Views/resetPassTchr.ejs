      // Function to show modal
      function showModal(modalId) {
        document.getElementById("emailModal").style.display = "none";
        document.getElementById("otpModal").style.display = "none";
        document.getElementById("passwordModal").style.display = "none";

        document.getElementById(modalId).style.display = "block";
        localStorage.setItem("activeModal", modalId); // Store which modal is active
    }

    // Function to load the correct modal on page refresh
    function loadModalState() {
        const activeModal = localStorage.getItem("activeModal") || "emailModal"; // Default to emailModal
        showModal(activeModal);
    }
    function startNewProject() {
    // Clear localStorage to reset the modal state
    localStorage.removeItem("activeModal");}
    window.onload = loadModalState; // Run on page load
