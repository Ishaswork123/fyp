<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Experiments</title>
    <style>
        body {
            font-family: 'lato', sans-serif;
        }
        .container {
            max-width: 1000px;
            margin: auto;
            padding: 10px;
        }
        h2 {
            font-size: 26px;
            margin: 20px 0;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        input[type="number"] {
            width: 60px;
            text-align: center;
            font-size: 16px;
            border: 2px solid green;
            outline: none;
            transition: 0.3s;
        }
        input[type="number"].red {
            border-color: red;
        }
        button {
            padding: 5px 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Pendulum Experiments</h2>
        <table>
            <tr>
                <th>Student Name</th>
                <th>Mass</th>
                <th>Radius</th>
                <th>Time Period</th>
                <th>Grade</th>
            </tr>
            <% penExperiments.forEach(exp => { %>
                <tr>
                    <td><%= exp.studentName %></td>
                    <td><%= exp.mass1 %></td>
                    <td><%= exp.radius1 %></td>
                    <td><%= exp.timePeriod1 %></td>
                    <td>
                        <form action="/tchr/grade" method="POST">
                            <input type="hidden" name="studentName" value="<%= exp.studentName %>">
                            <input type="hidden" name="exp_no" value="1">
                            <input type="hidden" name="exp_title" value="Pendulum">
                            <input type="number" name="grade" class="grade-input" min="0" max="5" value="5" required>
                            <button type="submit">Submit</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>

    <div class="container">
        <h2>Spring Experiments</h2>
        <table>
            <tr>
                <th>Student Name</th>
                <th>Mass</th>
                <th>Initial Length</th>
                <th>Final Length</th>
                <th>Time Period</th>
                <th>Grade</th>
            </tr>
            <% springExperiments.forEach(exp => { %>
                <tr>
                    <td><%= exp.studentName %></td>
                    <td><%= exp.mass1 %></td>
                    <td><%= exp.initialLength1 %></td>
                    <td><%= exp.finalLength1 %></td>
                    <td><%= exp.timePeriod1 %></td>
                    <td>
                        <form action="/tchr/grade" method="POST">
                            <input type="hidden" name="studentName" value="<%= exp.studentName %>">
                            <input type="hidden" name="exp_no" value="2">
                            <input type="hidden" name="exp_title" value="Spring">
                            <input type="number" name="grade" class="grade-input" min="0" max="5" value="5" required>
                            <button type="submit">Submit</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const gradeInputs = document.querySelectorAll(".grade-input");

            gradeInputs.forEach(input => {
                input.addEventListener("focus", function() {
                    this.value = "0";  // Set to 0 when clicked
                    this.classList.add("red"); // Turn border red
                });

                input.addEventListener("input", function() {
                    if (this.value === "5") {
                        this.classList.remove("red"); // Turn back to green if 5
                    } else {
                        this.classList.add("red");
                    }
                });
            });
        });
    </script>
</body>
</html>
